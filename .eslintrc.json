{
    "parser": "babel-eslint",
    "extends": ["standard", "prettier"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "rules": {
        "import/no-unresolved": [2]
    },
    "globals": {
        "phaser": true,
        "__DEV__": false
    },
    "settings": {
        "import/core-modules": ["phaser", "pixi", "p2"]
    }
}
